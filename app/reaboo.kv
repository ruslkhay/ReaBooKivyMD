<BaseMDNavigationItem>:

    MDNavigationItemIcon:
        icon: root.icon

    MDNavigationItemLabel:
        text: root.text


<TopBar>:
    type: "small"
    md_bg_color: self.theme_cls.backgroundColor

    MDTopAppBarLeadingButtonContainer:
        MDActionTopAppBarButton:
            icon: "menu"

    MDTopAppBarTitle:
        text: "AppBar Center-aligned"
        pos_hint: {"center_x": .5}

    MDTopAppBarTrailingButtonContainer:
        MDActionTopAppBarButton:
            icon: "account-circle-outline"


<StudyScreen>:

    name: "Flashcards"
    md_bg_color: (0, 0, 0, 0.4)
    MDFabButton:
        pos_hint: {'center_x': 0.25,'center_y': 0.05}
        icon: 'close-circle'
        on_release: root.loop_through() 
    MDFabButton:
        pos_hint: {'center_x': 0.75,'center_y': 0.05}
        icon: 'check-circle'
        on_release: root.remove_top_widget() 


<MainScreen>:
    name: "Study"

    MDBoxLayout:
        orientation: 'vertical'

        MDRelativeLayout:  # Top screen part
            size_hint_y: 0.25

        MDRelativeLayout:  # Middle screen part
            size_hint_y: 0.8

        MDRelativeLayout:  # Botton screen part
            size_hint_y: 0.15
            MDButton:
                style: "filled"
                pos_hint: {'center_x': 0.5,'center_y': 0.5}
                on_release: app.start_learning()
                MDButtonText:
                    text: "Learn"


MDBoxLayout:
    orientation: "vertical"
    md_bg_color: self.theme_cls.backgroundColor

    MDScreenManager:
        id: screen_manager

        MainScreen:
            id: screen_main

        StudyScreen:
            id: screen_study

        CardsListScreen:
            id: screen_cardlist

        CardScreen:
            id: screen_card

    MDNavigationBar:
        on_switch_tabs: app.on_switch_tabs(*args)
        id: navigation_bar

        BaseMDNavigationItem:
            icon: "school"
            text: screen_main.name 
            active: True

        BaseMDNavigationItem:
            icon: "list-box-outline"
            text: screen_cardlist.name      # ATTENTION
